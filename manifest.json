{
    "manifest_version": 2,
    "name": "Adopto Hire Extension testing",
    "version": "0.9.6",

    "description": "Source candidates to your Adopto account with a single click.",
    "icons": {
        "16": "icon/icon_16.png",
        "48": "icon/icon_48.png",
        "128": "icon/icon_128.png"
    },

    "author": "Bojan Do≈°en, Adopto LTD",
    "permissions": [
        "activeTab",
        "https://*.adopto.eu/*",
        "http://adopto-local.eu/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.facebook.com/*",
                "https://*.github.com/*",
                "https://*.angel.co/*",
                "https://*.dribbble.com/*",
                "https://*.linkedin.com/*",
                "http://*.stackoverflow.com/*",
                "http://*.codeproject.com/*",
                "https://*.twitter.com/*"
            ],
            "css": [
                "css/adopto.css",
                "css/adopto-tabs.css",
                "css/adopto-form.css",
                "css/adopto-activities.css",
                "css/adopto-communications.css"
            ],
            "js": [
                "js/jquery.min.js",
                "js/google-fonts.js",
                "js/helpers.js",
                "js/adopto.js",
                "js/adopto-sidebar.js",

                "modules/facebook.js",
                "modules/github.js",
                "modules/angellist.js",
                "modules/dribbble.js",
                "modules/linkedin.js",
                "modules/stackoverflow.js",
                "modules/codeproject.js",
                "modules/twitter.js"
            ]
        }
    ],
    "web_accessible_resources" : [
        "*.json",
        "*.svg",
        "*.png",
        "*.html",
        "*.woff2"
    ],

    "background": {
        "scripts": ["js/adopto-button.js"]
    },
    "browser_action": {
        "default_title": "",
        "default_icon": "icon/icon_19.png"
    },
    "homepage_url": "https://adopto.eu/"
}
